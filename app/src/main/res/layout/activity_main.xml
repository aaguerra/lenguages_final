<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/buttonFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_boton.boton.tomarfoto"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/button_posicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity.main.textview.posicion"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonFoto"
        android:layout_alignStart="@+id/buttonFoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_coordenadas"
        android:layout_alignTop="@+id/button_posicion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_posicion"
        android:layout_toStartOf="@+id/button_posicion"
        android:layout_alignBottom="@+id/button_posicion" />

</RelativeLayout>
